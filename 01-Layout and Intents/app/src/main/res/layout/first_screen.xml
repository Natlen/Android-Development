<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="This is the first screen, choose the activity u wish to see, from the table below."
        android:textSize="26dp"/>
    <GridLayout
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="88dp"
        android:columnCount="2"
        android:rowCount="2"
        android:background="#00bfff"
        android:visibility="visible">
        <TextView android:id="@+id/act1"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Relative p / ls"
            android:onClick="set_layout"
            android:textAlignment="center"
            android:textSize="26sp"
            />
        <TextView android:id="@+id/act2"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Grid"
            android:onClick="set_layout"
            android:textAlignment="center"
            android:textSize="26sp"
            />
        <TextView android:id="@+id/act3"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Frame - Clock"
            android:onClick="set_layout"
            android:textAlignment="center"
            android:textSize="26sp"
            />
        <TextView android:id="@+id/act4"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Table"
            android:onClick="set_layout"
            android:textAlignment="center"
            android:textSize="26sp"
            />
    </GridLayout>
</RelativeLayout>